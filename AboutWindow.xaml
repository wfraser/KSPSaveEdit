<Window x:Class="KSPSaveEdit.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About" Height="200" Width="300" WindowStyle="None">
    <DockPanel>
        <Grid DockPanel.Dock="Bottom">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="1" Padding="10" Margin="10" Click="OK_Click">OK!</Button>
        </Grid>

        <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap">
            <Run FontSize="42">KSP Save Edit</Run>
            <LineBreak/>
            <Run>by William R. Fraser</Run>
            <LineBreak/>
            <Hyperlink NavigateUri="http://www.codewise.org/" Click="Hyperlink_Click">http://www.codewise.org/</Hyperlink>
        </TextBlock>
    </DockPanel>
</Window>
